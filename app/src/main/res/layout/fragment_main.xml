<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:padding="16dp">

        <TextView
                android:id="@+id/registration"
                android:text="Карта дня"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/forum" />

        <TextView
                android:id="@+id/create_account"
                android:text="№ 0"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/registration"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/oranienbaum"
                app:layout_constraintStart_toStartOf="@+id/card_image" />

        <ImageView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/card"
                app:layout_constraintTop_toBottomOf="@id/create_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Шут"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/oranienbaum"
                app:layout_constraintTop_toBottomOf="@id/card_image"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Эта карта говорит: «Не бойся начать с нуля!». Шут всегда готов к новым приключениям. Его девиз – рискни или потеряешь шанс"
                android:textColor="@color/grey"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/card"/>

        <Button
                android:id="@+id/button_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расшифровка"
                android:backgroundTint="@color/green"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>