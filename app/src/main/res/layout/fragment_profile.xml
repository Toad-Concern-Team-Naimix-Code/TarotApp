<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="HR"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

        <androidx.cardview.widget.CardView
                android:id="@+id/icon"
                android:layout_marginTop="16dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="60dp"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/jester"
                    android:background="@color/orange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/log_in"
                android:text="Гэндальф Серый"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:fontFamily="@font/forum" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Дата рождения: 03.01.1893"
                android:textColor="@color/grey"
                android:gravity="center" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ООО “Таро”"
                android:textColor="@color/grey"
                android:gravity="center" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Доставка"
                android:textColor="@color/grey"
                android:gravity="center" />
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:foregroundGravity="center">

            <TextView
                    android:id="@+id/registration"
                    android:text="Карта дня"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:fontFamily="@font/forum" />

            <TextView
                    android:id="@+id/create_account"
                    android:text="№ 0"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/registration"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/oranienbaum"
                    app:layout_constraintStart_toStartOf="@+id/card_image" />

            <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card"
                    app:layout_constraintTop_toBottomOf="@id/create_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <TextView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="Шут"
                    android:textSize="32sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/oranienbaum"
                    app:layout_constraintTop_toBottomOf="@id/card_image" />

            <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Эта карта говорит: «Не бойся начать с нуля!». Шут всегда готов к новым приключениям. Его девиз – рискни или потеряешь шанс"
                    android:textColor="@color/grey"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/card" />

        </LinearLayout>

        <Button
                android:id="@+id/button_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расшифровка"
                android:backgroundTint="@color/green"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>